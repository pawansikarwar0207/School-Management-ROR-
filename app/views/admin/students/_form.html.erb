<%= form_with(model: student) do |form| %>
<% if @student.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>
  <ul>
    <% @student.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="form-group">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: 'form-control mt-2 mb-2' %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="form-group">
        <%= form.label :middle_name %>
        <%= form.text_field :middle_name, class: 'form-control mt-2 mb-2' %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="form-group">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: 'form-control mt-2 mb-2' %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :father_name %>
        <%= form.text_field :father_name, class: 'form-control mt-2 mb-2' %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :address %>
        <%= form.text_field :address, class: 'form-control mt-2 mb-2' %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :date_of_birth %>
        <%= form.date_field :date_of_birth, class: 'form-control mt-2 mb-2' %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :class_name %>
        <%= form.text_field :class_name, class: 'form-control mt-2 mb-2', min: 0, max: 12 %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :blood_group %>
        <%= form.text_field :blood_group, class: 'form-control mt-2 mb-2' %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: 'form-control mt-2 mb-2'%>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :image %>
      <%= form.file_field :image, class: 'form-control mt-2 mb-2' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.submit class: "btn btn-primary mt-2 mb-2" %>
    <%= link_to 'Back', admin_students_path, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>